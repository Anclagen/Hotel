<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head.ejs') %>
    <link href="/stylesheets/rooms.css" rel="stylesheet" />
    <script src="/javascripts/rooms.js" defer></script>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>

    <h2 class="p-3">Choose a room</h2>
    <div class="list-group">
      <% rooms.forEach(function(room) { %>
      <div class="row px-3 py-1 w-100">
        <span class="col py-1 bg-info">Room for <%=room.Capacity%> people<span class="right">Daily cost: <%=room.Price%></span></span>
        <button
          onclick="makeReservation(1,'<%=room.id%>',
          'http\:\/\/localhost:3000\/rooms\/reservation')"
          class="col btn btn-secondary"
        >
          Rent a room
        </button>
      </div>
      <% }); %>
    </div>
  </body>
</html>
